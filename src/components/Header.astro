---
import {
  AccueilLink,
  PlanLink,
  DecouvrirLaRegionLink,
  DispoLink,
  RentalToggleButton,
} from "@/components/Buttons";
import { Image } from "astro:assets";
import { MobileMenu } from "@/components/MobileMenu";
import { GiteLogoWrapper } from "@/components/GiteLogoWrapper";

const activePath = Astro.url.pathname;
---

<header class="bg-white shadow-md w-full p-6">
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex flex-wrap space-y-2">
      <div class="mr-4">
        <GiteLogoWrapper currentPath={activePath} />
      </div>
      <div class="flex flex-row flex-1 min-w-40 justify-start gap-2">
        <Image
          src="/meuble-de-tourisme.webp"
          alt="Meublé de tourisme"
          class="w-10 sm:w-12 lg:w-16 h-auto object-contain shrink-0"
          width={180}
          height={132}
        />
        <Image
          src="/trois-epis.webp"
          alt="Gite 3 épis"
          class="w-16 sm:w-20 lg:w-24 h-auto object-contain shrink-0"
          width={232}
          height={120}
        />
      </div>
    </div>
    <MobileMenu activePath={activePath} client:load />
    <nav class="hidden lg:flex flex-1 flex-col justify-end gap-3">
      <div class="flex justify-end gap-3">
        <AccueilLink activePath={activePath} client:load />
        <DispoLink activePath={activePath} client:load />
        <PlanLink activePath={activePath} client:load />
        <DecouvrirLaRegionLink activePath={activePath} client:load />
      </div>
      <div class="flex justify-center pt-3 pb-2">
        <RentalToggleButton activePath={activePath} client:load />
      </div>
    </nav>
  </div>
</header>
