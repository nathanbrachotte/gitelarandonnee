---
import { H3 } from "@/components/Typography";
import { cn } from "@/lib/utils";

type Props = {
  title?: string;
  className?: string;
};
const { title, className } = Astro.props;
---

<div
  class={cn("bg-card text-card-foreground p-4 border-2 rounded-lg", className)}
>
  {title ? <H3>{title}</H3> : null}
  <slot />
</div>
