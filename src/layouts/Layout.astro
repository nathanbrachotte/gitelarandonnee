---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "../styles/globals.css";
import "../styles/fonts.css";
import { cn } from "@/lib/utils";
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";
import { WEBSITE_ADDRESS } from "@/data";

interface Props {
  title: string;
  description: string;
  withPadding?: boolean;
  className?: string;
  ignoreViewTransitions?: boolean;
}
const {
  title,
  description,
  withPadding = true,
  ignoreViewTransitions = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Is this needed? -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: "/og.png",
          url: WEBSITE_ADDRESS,
        },
      }}
      twitter={{
        creator: "@nathanbrachotte",
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "/og.png",
          },
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
        ],
      }}
    />
    {ignoreViewTransitions ? null : <ViewTransitions />}
  </head>
  <body
    class={cn(
      "min-h-screen flex flex-col justify-between items-stretch min-w-full",
    )}
  >
    <Header />
    <div
      class={cn({
        "px-4 md:px-8 mb-8 mt-8": withPadding,
      })}
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
